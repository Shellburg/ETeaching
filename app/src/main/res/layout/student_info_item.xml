<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <TextView
        android:id="@+id/studentinfo_tv1"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="学生姓名:"
        />
    <TextView
        android:id="@+id/studentinfo_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="学生码:"
        android:layout_below="@id/studentinfo_tv1"
        >
    </TextView>
    <TextView
        android:id="@+id/studentinfo_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="手机号码:"
        android:layout_below="@id/studentinfo_tv2"
        >
    </TextView>
</RelativeLayout>
